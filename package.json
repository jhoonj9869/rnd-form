{
  "name": "rnd-form",
  "version": "2.5.0",
  "description": "Google Drive 연동 지출결의서 관리 도구",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "set NODE_ENV=development && electron .",
    "build:win": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder",
    "release:public": "node scripts/prepare-release.js public && npm run build:win",
    "release:internal": "node scripts/prepare-release.js internal && npm run build:win"
  },
  "build": {
    "appId": "com.nexteam.rndform",
    "productName": "RND Form",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico",
      "publish": {
        "provider": "github",
        "owner": "jhoonj9869",
        "repo": "rnd-form-releases"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RND Form"
    },
    "publish": {
      "provider": "github",
      "owner": "jhoonj9869",
      "repo": "rnd-form-releases",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^2.0.1"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "dotenv": "^17.2.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "googleapis": "^159.0.0"
  }
}
